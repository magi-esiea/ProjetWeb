<%- include("../partials/header") -%>

<div class="container">
	<p class="ml-b"><a href="/user/products" class="ml-b text-success" style="color:#1C79DA;"><span class="glyphicon glyphicon-chevron-left" style="color:#1C79DA;"></span> All products</a>
	<div class="panel panel-default">
		<div class="panel-heading">Add Product</div>
		<div class="panel-body">
			<form method="post" action="/user/products/create" class="create-product">
				<div class="col-md-8">
					<div class="form-group">
						<label>Name*</label>
						<input type="text" name="name" value="" class="form-control required"/>
					</div>
					<div class="form-group">
						<label>Description</label>
						<textarea id="ck-editor-area" name="content" class="form-control"></textarea>
					</div>
					<div class="form-group">
						<label>Short Description</label>
						<textarea name="excerpt" rows="7" class="form-control"></textarea>
					</div>
				</div>
				<div class="col-md-4">
					<div class="form-group">
						<label>Price*</label>
						<div class="input-group">
							<div class="input-group-addon">$</div>
							<input type="text" name="price" value="" placeholder="Amount" class="form-control required"/>
						</div>
					</div>
					<div class="form-group">
						<label>Status</label>
						<select name="status" class="form-control">
							<option value="1">Active</option>
							<option value="0">Inactive</option>
						</select>
					</div>
					<div class="form-group">
						<label>Date</label>
						<div class="input-group date datepicker">
							<input type="text" name="date" value="" class="form-control"/><span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
						</div>
					</div>
					<div class="form-group">
						<label>On Stock*</label>
						<input type="number" name="stock" value="" class="form-control required"/>
					</div>
					<input type="submit" value="Submit" class="btn btn-success" style="background-color:#1C79DA; border-color:#1C79DA;"/>
				</div>
			</form>
		</div>
	</div>
	</p>
</div>

<%- include("../partials/footer") -%>